FROM node:22-alpine as dev

RUN apk add --no-cache libc6-compat openssl
RUN corepack enable && corepack prepare pnpm@8.12.0 --activate

WORKDIR /app

# package.jsonë§Œ ë¨¼ì € ë³µì‚¬
COPY --chown=node:node package.json ./

# pnpm ì„¤ì¹˜ (lockfile ìƒì„±)
RUN pnpm install

# ì†ŒìŠ¤ ì½”ë“œ ë³µì‚¬ (ê¶Œí•œë„ í•¨ê»˜)
COPY --chown=node:node . .

USER node

CMD ["pnpm", "start:dev"]

#
# ğŸ–¥ï¸ğŸ“² Production-build phase
#
FROM node:22-alpine as build

RUN apk add --no-cache libc6-compat
RUN corepack enable && corepack prepare pnpm@8.12.0 --activate
WORKDIR /app

ENV NODE_ENV production

COPY --chown=node:node --from=dev /app/node_modules ./node_modules
COPY --chown=node:node --from=dev /app .

RUN pnpm build
RUN pnpm install --production && pnpm store prune

USER node

#
# ğŸš€ Production-deploy phase
#
FROM node:22-alpine as prod

WORKDIR /app
RUN apk add --no-cache libc6-compat
RUN corepack enable && corepack prepare pnpm@8.12.0 --activate

ENV NODE_ENV production

COPY --chown=node:node --from=build /app/dist ./dist
COPY --chown=node:node --from=build /app/node_modules ./node_modules

USER node

CMD ["node", "dist/main.js"]