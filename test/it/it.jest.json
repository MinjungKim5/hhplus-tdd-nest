{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "testEnvironment": "node",
  "testRegex": ".*\\.it\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globalSetup": "<rootDir>/test/setup.ts",
  "globalTeardown": "<rootDir>/test/down.ts",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
